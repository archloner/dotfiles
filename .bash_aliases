# Bash aliases
# v 0.0.1

alias ll="exa -lh"
alias la="exa -lah"

# Directory Shortcuts
alias home="cd ~/;exa -lh"
alias desk="cd ~/Desktop;exa -lh"

# Applications
# alias nano=/opt/homebrew/bin/nano
alias finder="open ."
alias chrome='open -a "Google Chrome"'

# Editing Shortcuts
alias zed="nano ~/.zshrc"
alias alied="nano ~/.bash_aliases"

# Python
alias venv="source .venv/bin/activate"

# Git
alias gs="git status"

alias cl="clear"
